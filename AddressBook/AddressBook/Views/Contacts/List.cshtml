
@model AddressBook.ViewModels.ContactsListViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark row justify-content-spacebetween">
        <a class="navbar-brand" asp-controller="home" asp-action="index">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="contacts" asp-action="index">List</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="contacts" asp-action="create">Create</a>
                </li>
            </ul>
        </div>
        <h2 style="color: lightgray">@Model.PageTitle</h2>
    </nav>
</div>


<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card-deck">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Contacts.ToList().Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model.Contacts.ToList()[i].FirstName</td>
                            <td>@Model.Contacts.ToList()[i].LastName</td>
                            <td>
                                <a asp-controller="contacts" asp-action="details" asp-route-id="@Model.Contacts.ToList()[i].ContactId" class="btn btn-dark m-1">View</a>
                                <a asp-controller="contacts" asp-action="edit" asp-route-id="@Model.Contacts.ToList()[i].ContactId" class="btn btn-dark m-1">Edit</a>
                                <a asp-controller="contacts" asp-action="delete" asp-route-id="@Model.Contacts.ToList()[i].ContactId" class="btn btn-dark m-1">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>




