
@model AddressBook.ViewModels.ContactsListViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h2 style="color: lightgray">@Model.PageTitle</h2>
</div>


<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card-deck">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Contacts.ToList().Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model.Contacts.ToList()[i].FirstName</td>
                            <td>@Model.Contacts.ToList()[i].LastName</td>
                            <td>
                                <a asp-controller="contacts" asp-action="details" asp-route-id="@Model.Contacts.ToList()[i].ContactId" class="btn btn-dark m-1">View</a>
                                <a asp-controller="contacts" asp-action="edit" asp-route-id="@Model.Contacts.ToList()[i].ContactId" class="btn btn-dark m-1">Edit</a>
                                <a asp-controller="contacts" asp-action="delete" asp-route-id="@Model.Contacts.ToList()[i].ContactId" class="btn btn-dark m-1">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>




