
@model AddressBook.ViewModels.ContactsListViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Model.PageTitle = "Existing Contacts";
}

<div class="container">
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark row justify-content-spacebetween">
        <a class="navbar-brand" asp-controller="home" asp-action="index">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="contacts" asp-action="index">List</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="contacts" asp-action="create">Create</a>
                </li>
            </ul>
        </div>
        <h2 style="color: lightgray">@Model.PageTitle</h2>
    </nav>
</div>

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card-deck">
            @foreach (var contact in Model.Contacts)
            {
                <div class="card m-4">
                    <div class="card-header">
                        <h3>@contact.FirstName @contact.LastName</h3>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-controller="contacts" asp-action="details" asp-route-id="@contact.ContactId" class="btn btn-dark">View</a>
                        <a href="#" class="btn btn-dark">Edit</a>
                        <a href="#" class="btn btn-dark">Delete</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


